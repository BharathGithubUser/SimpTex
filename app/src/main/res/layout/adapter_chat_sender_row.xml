<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_sender_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:background="#DD21B1F3"
        android:padding="10dp"
        android:text="sender"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="50dp" />
    <TextView
        android:layout_below="@+id/txt_sender_message"
        android:id="@+id/txt_sent_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_alignLeft="@+id/txt_sender_message"
        android:layout_alignParentLeft="true"
        android:text="12:49"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/txt_sender_message"
        android:paddingStart="10dp" />
</RelativeLayout>